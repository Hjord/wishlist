{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "typings.d.ts",
        "**/*.ts"
    ],
    "filesGlob": [
        "**/*.ts"
    ],

    "atom": {
        "rewriteTsconfig": false
    },
    "compileOnSave": false,
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}
